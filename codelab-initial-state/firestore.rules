rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // [READ] Data that exists on the Firestore document
    function existingData() {
      return resource.data;
    }
    // [WRITE] Data that is sent to a Firestore document
    function incomingData() {
      return request.resource.data;
    }

    // User's cart metadata
    match /carts/{cartIdFromUID} {
      allow create: if request.auth.uid == incomingData().ownerUID;
      allow read, update, delete: if request.auth.uid == existingData().ownerUID;
    }

    // Items inside the user's cart
    match /carts/{cartIdFromUID}/items/{itemID} {
      allow read, write: if get(
        /databases/$(database)/documents/carts/$(cartIdFromUID)
      ).data.ownerUID == request.auth.uid;
    }

    // All items available in the store. Users can read
    // items but never write them.
    match /items/{itemID} {
      allow read: if true;
      // TODO: Consider write rule that ensures prices are numbers
    }
  }
}
